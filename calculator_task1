/* here i the created a simple calculator using java*/
import java.util.Scanner;

public class codetechtask1 {
    public static void main(String[] args) {
        System.out.println("Enter The Which  Oparation Do u Want Perform +, -, *, /, %,");
        Scanner sw=new Scanner(System.in);
        String op=sw.next();
        System.out.println("Enter the any two number:");
        System.out.println("Enter the value of a: ");
        int a=sw.nextInt();
        System.out.println("Enter the value of b: ");
        int b=sw.nextInt();
        switch (op) {
            case"+" :System.out.println("Addtion of Two numbers is :"+(a+b));
                break;
            case"-" :System.out.println("Differnce  of Two numbers is: "+(a-b));
                break;
            case"*" :System.out.println("Multiplication  of Two numbers is: "+(a*b));
                break;
            case"/" :System.out.println("Division  of Two numbers is :"+(a/b));
                break;
            case"%" :System.out.println("Reminder  of Two numbers is :"+(a%b));
                break;
            default:
                System.out.println("You enter the wrong oparation");
                System.out.println("Enter the valid operation ");
        }
    }
}
